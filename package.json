{
  "name": "@parcellab/poc-api-admin",
  "version": "0.9.0",
  "description": "API & Admin PoC",
  "author": "engineering@parcellab.com",
  "type": "commonjs",
  "publishConfig": {
    "@parcellab:registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/parcelLab/poc-api-admin.git"
  },
  "engines": {
    "node": ">18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1",
    "@commitlint/config-conventional": "17.1",
    "@parcellab/eslint-config": "^0.3",
    "@types/async": "^3.2.18",
    "@types/chai": "^4.3",
    "@types/date-fns": "^2.6",
    "@types/eslint": "^8.4",
    "@types/expect": "^24.3",
    "@types/is-ci": "^3.0",
    "@types/iso-3166-2": "^1.0.0",
    "@types/lodash": "^4.14",
    "@types/mocha": "^9.1",
    "@types/node": "^18.7",
    "@types/sinon": "^10.0.13",
    "@types/wtfnode": "^0.7",
    "@typescript-eslint/eslint-plugin": "^5.36",
    "@typescript-eslint/parser": "^5.36",
    "async-es": "^3.2.4",
    "chai": "^4.3",
    "eslint": "^8.27",
    "eslint-import-resolver-typescript": "^3.5",
    "eslint-plugin-import": "^2.26",
    "eslint-plugin-promise": "^6.0",
    "eslint-plugin-strict-dependencies": "^1.0",
    "eslint-plugin-unicorn": "^43.0",
    "husky": "^8.0",
    "is-ci": "^3.0",
    "lint-staged": "^13.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7",
    "sinon": "^14.0.2",
    "ts-mocha": "^10.0",
    "tsd": "^0.25.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf --no-glob ./coverage ./tsconfig.tsbuildinfo ./.eslintcache",
    "commitlint": "commitlint -x @commitlint/config-conventional --edit",
    "lint": "npm run typecheck && npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check --ignore-unknown .",
    "lint:staged": "lint-staged",
    "format": "prettier --write --ignore-unknown .",
    "prepare": "test \"$NODE_ENV\" = production || is-ci || husky install",
    "secrets:pull": "aws secretsmanager get-secret-value --region eu-central-1 --secret-id backend/dev/business-api/env --query SecretString --output text | jq -r 'keys[] as $k | \"\\($k)=\\(.[$k])\"' > .env",
    "show:coverage": "open coverage/index.html",
    "start": "ts-node app.ts",
    "start:dev": "nodemon app.ts",
    "start:docker": "podman build -t localhost/parcellab/poc-api-admin:latest --build-arg NPM_GITHUB_TOKEN=$NPM_GITHUB_TOKEN . && podman run localhost/parcellab/repo-template-ts:latest",
    "test": "APP_ENV=test nyc --reporter=text ts-mocha -r tsconfig-paths/register",
    "test:coverage": "APP_ENV=test nyc --reporter=lcov ts-mocha -r tsconfig-paths/register ",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.1.2",
    "@aws-sdk/client-firehose": "^3.216.0",
    "@aws-sdk/client-s3": "^3.223.0",
    "@aws-sdk/util-base64": "^3.208.0",
    "@fastify/cors": "^8.2",
    "@fastify/static": "^6.5",
    "@fastify/swagger": "^7.5",
    "@fastify/type-provider-typebox": "^2.3",
    "@forestadmin/agent": "^1.4.15",
    "@forestadmin/datasource-mongoose": "^1.3.4",
    "@immobiliarelabs/fastify-sentry": "^5.0.2",
    "@sentry/integrations": "^7.38.0",
    "@sentry/node": "^7.13",
    "@swc/core": "^1.3",
    "@types/flat": "^5.0",
    "@types/qs": "^6.9",
    "async": "^3.2.4",
    "browser-dtector": "^3.2.0",
    "countries-and-timezones": "^3.4.1",
    "date-fns": "^2.29",
    "date-fns-tz": "^2.0.0",
    "dd-trace": "^3.15",
    "dotenv": "^16.0",
    "fastify": "^4.10.2",
    "fastify-no-additional-properties": "^2.3.0",
    "flat": "^5.0",
    "iso-3166-2": "^1.0.0",
    "jose": "^4.13.1",
    "json-schema-library": "^7.4",
    "lodash": "^4.17",
    "mocha": "^10.2.0",
    "mongodb": "^4.9",
    "mongoose": "^6.7",
    "nodemon": "^2.0",
    "qs": "^6.11",
    "sift": "^16.0",
    "superstruct": "^0.16",
    "ts-node": "^10.9",
    "tsconfig-paths": "^4.1",
    "typescript": "^4.9",
    "winston": "^3.8",
    "wtfnode": "^0.9"
  },
  "mocha": {
    "ignore": [
      "node_modules/**/*",
      "admin/**/*"
    ],
    "spec": "**/*.spec.ts",
    "trace-warnings": true,
    "require": "test/global.setup.ts"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts",
      "test/*"
    ]
  }
}
