{
  "compilerOptions": {
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": true,
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "checkJs": false,
    "lib": ["es2021"],
    "inlineSourceMap": true,
    "incremental": true
  },
  "ts-node": {
    "swc": true,
    "files": true,
    "transpileOnly": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/test/**"]
}
